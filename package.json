{
  "name": "frontend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:webpack dev:electron",
    "build": "cross-env NODE_ENV=\"production\" webpack --progress",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && electronmon . --no-sandbox",
    "lint": "eslint src/**/*",
    "lint:js": "eslint src/js/*.js",
    "format": "prettier -w src/js/*.js",
    "format:js": "prettier -w src/js/*.js",
    "pack": "electron-builder --dir",
    "dist": "rimraf dist && run-p build && electron-builder --win --x64",
    "test": "jest"
  },
  "build": {
    "appId": "com.your-app.namespace",
    "productName": "YourApp",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "public/**/*",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.9",
    "@mui/material": "^5.14.9",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/electron": "^1.6.10",
    "@types/fabric": "^5.3.6",
    "@types/jest": "^29.5.12",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/simplebar": "^5.3.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "custom-electron-titlebar": "^4.2.7",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.4",
    "electron-log": "^4.4.8",
    "electronmon": "^2.0.2",
    "eslint": "^8.49.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "fabric": "^5.3.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lodash.throttle": "^4.1.1",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "simplebar": "^6.2.5",
    "simplebar-react": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "electronmon": {
    "patterns": [
      "dist/**/*"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "node-polyfill-webpack-plugin": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
